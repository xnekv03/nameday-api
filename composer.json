{
  "name": "xnekv03/nameday-api",
  "description": "Nameday API library for https://nameday.abalin.net",
  "type": "library",
  "keywords": [
    "api",
    "nameday",
    "name day",
    "international"
  ],
  "homepage": "https://nameday.abalin.net",
  "license": "MIT",
  "authors": [
    {
      "name": "Vojta Nekvapil",
      "homepage": "https://nameday.abalin.net",
      "email": "fby@post.cz"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "7.4|8.*",
    "ext-json": "*",
    "nesbot/carbon": "2.48.*",
    "guzzlehttp/guzzle": "^7.3"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.*",
    "phpstan/phpstan": "0.12.*",
    "squizlabs/php_codesniffer": "3.6.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "Test\\": "tests/"
    },
    "files": ["src/helpers.php"]
  },
  "scripts": {
    "build": [
      "@composer install --no-progress --no-interaction --no-suggest --no-scripts",
      "@phpcs",
      "@phpunit",
      "@phpstan"
    ],
    "phpunit": "vendor/bin/phpunit tests/ -v --color",
    "phpcbf": "vendor/bin/phpcbf --colors -v --standard=PSR12 src/ tests/",
    "phpcs": "vendor/bin/phpcs --colors -v --standard=PSR12 src/ tests/",
    "phpstan": "vendor/bin/phpstan analyse -v --level=5 src/ tests/"
  }
}
