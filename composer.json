{
  "name": "xnekv03/nameday-api",
  "description": "Nameday API library for https://nameday.abalin.net",
  "type": "library",
  "keywords": [
    "api",
    "nameday",
    "name day",
    "international"
  ],
  "homepage": "https://github.com/xnekv03/api_nameday",
  "license": "MIT",
  "authors": [
    {
      "name": "VojtÄ›ch Nekvapil",
      "email": "dev@appfactory.cz",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=8.2",
    "ext-json": "*",
    "nesbot/carbon": "3.8.*",
    "guzzlehttp/guzzle": "7.9.*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.71",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^9",
    "spatie/ray": "^1.41"
  },
  "autoload": {
    "psr-4": {
      "Xnekv03\\ApiNameday\\": "src"
    },
    "files": [
      "src/helpers/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Xnekv03\\ApiNameday\\Tests\\": "tests"
    }
  },
  "scripts": {
    "psalm": "vendor/bin/psalm",
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
